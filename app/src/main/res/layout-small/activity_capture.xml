<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.captor.points.gtnaozuka.pointscaptor.CaptureActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:id="@+id/txtPointsNumber"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/captured_points"
                android:id="@+id/txtPointsLabel"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txtPointsNumber"
                android:layout_toEndOf="@+id/txtPointsNumber" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/mapsButton"
                android:src="@drawable/ic_action_map"
                android:contentDescription="@string/maps"
                android:onClick="startMapsActivity"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_oval" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_width="135dip"
                android:layout_height="135dip"
                android:id="@+id/btnPlay"
                android:src="@drawable/ic_action_play"
                android:contentDescription="@string/play"
                android:onClick="playRecord"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="20dip"
                android:background="@drawable/btn_oval" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/btnStop"
                android:src="@drawable/ic_action_stop"
                android:contentDescription="@string/stop"
                android:onClick="stopRecord"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_oval" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:id="@+id/txtLocation"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/gpsButton"
            android:src="@drawable/ic_action_gps"
            android:contentDescription="@string/gps"
            android:onClick="turnGpsOn"
            android:background="@drawable/btn_oval"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>